	log_debug "end get_gfsd_hostids"
}

#
# Output host-IDs of all client targets ("client1", "client2", ...) to
# standard out.
#
get_client_hostids()
{
	log_debug "get_client_hostids"

	I=1
	while true; do
		[ "X`eval echo \\$client$I`" = X ] && break
		eval echo "client$I"
